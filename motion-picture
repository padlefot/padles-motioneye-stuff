#!/bin/bash
#delete the existing snapshot to ensure we get a new one, or nothing
rm -rf /etc/motioneye/slack/snapshot.jpg
#wget didnt work so used curl instead
#wget -O /etc/motioneye/slack/snapshot.jpg http://<ip>:8765/picture/1/current/?_username=admin&_signature=<MotioneyeSignature>
#curl the picture
curl -o /etc/motioneye/slack/snapshot.jpg 'http://<motioneyeOS IP>:8765/picture/1/current/?_username=admin&_signature=<sign>'
#upload the picture using this script: https://github.com/guzzijason/slack-upload-bash
/etc/motioneye/slack/upload.sh -s <slack api key here> -c '#motioneye' -f /etc/motioneye/slack/snapshot.jpg -m 'jpg' -n 'Latest Picture from Cam'
